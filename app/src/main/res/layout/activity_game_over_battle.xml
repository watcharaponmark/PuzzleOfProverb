<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.puzzleofproverb.GameOverBattle"
    android:background="@drawable/bg1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <Button
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:id="@+id/bt_cosebt"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#a62572c4"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_GameOverBt"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_dark"
            android:background="@drawable/gameover2"
            android:layout_weight="0.10"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.06">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/bt_sc1bt"
                android:background="@drawable/scoreplayer2"
                android:layout_weight="1"
                android:paddingTop="27dp"
                android:textSize="30dp"
                android:paddingRight="27dp"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/bt_cs2bt"
                android:background="@drawable/scoreplayer1"
                android:layout_weight="1"
                android:textSize="30dp"
                android:paddingLeft="25dp"
                android:paddingTop="33dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tv_player1bt"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:background="#4f29b0c8"
                android:autoText="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tv_player2bt"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:background="#4f29b0c8" />
        </LinearLayout>

        <Button
            android:layout_width="180dp"
            android:layout_height="78dp"
            android:text="เล่นใหม่"
            android:id="@+id/bt_Replaybt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btre"
            android:paddingTop="8dp" />
    </LinearLayout>
</RelativeLayout>
