<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.puzzleofproverb.MainBattleplayActivity"
    android:background="@drawable/bg2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <EditText
                android:layout_width="220dp"
                android:layout_height="63dp"
                android:id="@+id/et_P1"
                android:text="Player1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/ua1"
                android:textColor="@android:color/white"
                android:paddingLeft="25dp"
                android:paddingTop="17dp" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="63dp"
                android:id="@+id/et_P2"
                android:text="Player2"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/ua2"
                android:textColor="@android:color/white"
                android:paddingTop="17dp"
                android:paddingRight="35dp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:text="เริ่มเกม"
            android:id="@+id/bt_playBattel"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/satrtgame"
            android:paddingBottom="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_playBattel"
            android:id="@+id/tv_playBattle"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
